{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{ asset('styles/component/_auth.scss') }}">
	<link rel="stylesheet" href="{{ asset('styles/auth/_index.scss') }}">
{% endblock %}

{% block body %}
	<div id="auth" class="d-grid">
		{% set href = "#" %}
		{% set href_content = "" %}

		{% block auth_sidebar %}
			{% embed "layout/sidebar.html.twig" with { "href": href, "href_content": href_content } %}
				{% block sidebar_inner %}
					<div class="d-flex flex-column h-100 p-5 gap-5">
						<div class="d-flex flex-column flex-fill align-items-center justify-content-center">
							<h1 class="text-primary mb-4"><b>Need to Note</b></h1>
							<p class="text-white text-center"><em>"Education is what remains after one has forgotten everything he learned in school" <br>Albert Einstein</em></p>
						</div>

						<div class="d-flex flex-fill align-items-center justify-content-center">
							<a class="btn btn-primary" href="{{ href }}">
								{{ href_content }}
							</a>
						</div>
					</div>
				{% endblock %}
			{% endembed %}
		{% endblock %}
		<div class="d-flex align-items-center justify-content-center bg-img">
			{% block auth_content %}{% endblock %}
		</div>
	</div>
{% endblock %}
