{% extends "page/auth/index.html.twig" %}

{% block auth_sidebar %}
	{% set href = path("auth.login") %}
	{% set href_content = "Already signed in?" %}

	{{ parent() }}
{% endblock %}

{% block auth_content %}
	<form class="auth bg-black p-5 rounded text-white" method="post" action="{{ path("auth.register.submit") }}">
		<h2 class="text-center">Sign up</h2>

		<div class="form-group pt-2">
			<label for="name">Name</label>
			<input type="text" class="form-control" id="name" name="name" required placeholder="Type your name">
		</div>

		<div class="form-group pt-2">
			<label for="surname">Surname</label>
			<input type="text" class="form-control" id="surname" name="surname" required placeholder="Type your surname">
		</div>


		<div class="form-group pt-2">
			<label for="email">Email address</label>
			<input type="email" class="form-control" id="email" name="email" required placeholder="Type your email">
		</div>

		<div class="form-group pt-2">
			<label for="password">Password</label>
			<input type="password" class="form-control" name="password" id="password" required placeholder="Type your password">
		</div>
		<div class="text-center pt-3">
		<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</form>
{% endblock %}
